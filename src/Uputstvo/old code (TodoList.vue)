testing code 

@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap");

input[type="text"],
input[type="password"] {
  font-size: 15px;
  padding: 5px;
}

.message {
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  animation-duration: 0.3s;
}

.todo-input {
  width: 100%;
  padding: 10px 18px;
  font-size: 18px;
  margin-bottom: 16px;
  border: none;
  background-color: #f1f3f4;
  color: #333;
  border-radius: 5px;
  font-family: "Poppins", sans-serif;
  transition: background-color 0.3s ease;
}

.todo-input:focus {
  outline: none;
  background-color: #d2d7db;
}

.todo-item {
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  animation-duration: 0.3s;
}

.remove-item {
  cursor: pointer;
  margin-left: 14px;
  color: #888;
  transition: color 0.3s ease;

  &:hover {
    color: #333;
  }
}

.todo-item-left {
  display: flex;
  align-items: center;
}

.todo-item-label {
  padding: 10px;
  border: 1px solid #f1f3f4;
  margin-left: 12px;
  word-break: break-all;
  border-radius: 5px;
  font-family: "Poppins", sans-serif;
  transition: background-color 0.3s ease;
}

.todo-item-label:hover {
  background-color: #f1f3f4;
}

.todo-item-edit {
  font-size: 24px;
  color: #2c3e50;
  margin-left: 12px;
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  font-family: "Poppins", sans-serif;

  &:focus {
    outline: none;
  }
}

.completed {
  text-decoration: line-through;
  color: #888;
}

.notCompleted {
  color: #f44336;
}

.extra-container1,
.extra-container2 {
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 16px;
  border-top: 1px solid #ddd;
  padding-top: 14px;
  margin-bottom: 14px;
  bottom: 0;
  position: sticky;
}

button {
  font-size: 14px;
  background-color: #fff;
  appearance: none;
  border: none;
  padding: 5px 10px;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
  font-family: "Poppins", sans-serif;

  &:hover {
    background-color: #eee;
  }

  &:focus {
    outline: none;
  }
}

.active {
  background: rgb(119, 137, 241);
}

.fade-enter-active,
.fade-leave-active {
  transition: opacity 0.2s;
}

.fade-enter,
.fade-leave-to {
  opacity: 0;
}

.lds-ring {
  display: block;
  position: relative;
  width: 64px;
  height: 64px;
  margin: auto;
  margin-bottom: 16px;
}

.lds-ring div {
  box-sizing: border-box;
  display: block;
  position: absolute;
  width: 51px;
  height: 51px;
  margin: 6px;
  border: 6px solid #ddd;
  border-radius: 50%;
  animation: lds-ring 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
  border-color: #ddd transparent transparent transparent;
}

.lds-ring div:nth-child(1) {
  animation-delay: -0.45s;
}

.lds-ring div:nth-child(2) {
  animation-delay: -0.3s;
}

.lds-ring div:nth-child(3) {
  animation-delay: -0.15s;
}

@keyframes lds-ring {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.info {
  margin-left: 10px;
  border-radius: 100px;
}
